<html>
  <head>
    <title>Shop Item - Start Bootstrap Template</title>
  </head>
  <body>
    <!-- Product section-->
    <section class="py-5">
      <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">
          <div class="col-md-6">
            <% if @product.image.attached? %>
              <%= image_tag @product.image, class: "card-img-top mb-5 mb-md-0" %>
            <% else %>
              <%= image_tag 'no_image-600x700.jpg' %>
            <% end %>
          </div>
          <div class="col-md-6">
            <div class="small mb-1"><%= "商品ID:#{@product.id}" %></div>
            <h1 class="display-5 fw-bolder"><%= @product.name %></h1>
            <div class="fs-5 mb-5">
              <span class="text-decoration-line-through"></span>
              <span><%= "#{@product.price}円" %></span>
            </div>
            <p class="lead"><%= safe_join(@product.description.split("\n"),tag(:br)) %></p>
            <div class="d-flex form-group">
              <%= form_tag cart_path(@product.id, params: { id: @product.id }), method: :patch do %>
                <%= number_field_tag :num_of_items, '1', class: "form-control text-center me-3", style: 'max-width: 4rem' %>
                <%= submit_tag 'カートに追加', class: 'btn btn-outline-dark mt-4' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- Related items section-->
    <section class="py-5 bg-light">
      <div class="container px-4 px-lg-5 mt-5">
        <h2 class="fw-bolder mb-4">関連商品</h2>
        <%= render partial: 'product_card', locals: { products: @related_products } %>
      </section>
    </body>
  </html>
