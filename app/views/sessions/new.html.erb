<header class="bg-dark py-5">
  <div class="container px-4 px-lg-5 my-5">
    <div class="text-center text-white">
      <h1 class="display-4 fw-bolder">Akira Mart</h1>
      <p class="lead fw-normal text-white-50 mb-0">ログイン画面</p>
    </div>
  </div>
</header>
<div class="container my-5">
  <% if flash[:alert].present? %>
    <div class="mt-4 alert alert-warning text-center">
      <p><%= " - #{flash[:alert]} -" %></p>
    </div>
  <% end %>
  <%= form_with url: login_path, scope: :session, local: true do |form| %>
    <div class="form-group mb-4">
      <%= form.label 'ユーザー名', class: "h6 mb-2" %>
      <%= form.text_field :name, class: "form-control", id: "session_name" %>
    </div>
    <div class="form-group mb-4">
      <%= form.label 'パスワード', class: "h6 mb-2" %>
      <%= form.password_field :password, class: "form-control", id: "session_password" %>
    </div>
    <%= form.submit "ログイン", class: "btn btn-primary mb-3" %>
  <% end %>
</div>
