<div class="container my-5">
  <% if flash[:alert].present? %>
    <div class="mt-4 alert alert-warning text-center">
      <% flash[:alert].each do |message| %>
        <p><%= " - #{message} -" %></p>
      <% end %>
    </div>
  <% end %>
  <div class="d-md-flex justify-content-md-end">
    <%= link_to '一覧', admin_products_path, class: "btn btn-outline-dark" %>
  </div>
  <%= form_with url: path, model: product do |form| %>
    <div class="form-group mb-4">
      <%= form.label '商品名', class: "h6 mb-2" %>
      <%= form.text_field :name, class: "form-control", id: "product_name" %>
    </div>
    <div class="form-group mb-4">
      <%= form.label '画像', class: "h6 mb-2" %>
      <%= form.file_field :image, class: "form-control", id: "product_image" %>
    </div>
    <div class="form-group mb-4">
      <%= form.label '値段', class: "h6 mb-2" %>
      <%= form.text_field :price, class: "form-control", id: "product_price" %>
    </div>
    <div class="form-group mb-4">
      <%= form.label '商品説明', class: "h6 mb-2" %>
      <%= form.text_area :description, class: "form-control", id: "product_description", size: "40 x 7" %>
    </div>
    <%= form.submit submit_button, class: "btn btn-primary mb-3" %>
  <% end %>
</div>