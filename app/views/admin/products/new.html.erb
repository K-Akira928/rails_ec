<header class="bg-dark py-5">
  <div class="container px-4 px-lg-5 my-5">
    <div class="text-center text-white">
      <h1 class="display-4 fw-bolder">Akira Mart</h1>
      <p class="lead fw-normal text-white-50 mb-0">商品作成画面</p>
    </div>
  </div>
</header>
<div class="container my-5">
  <%= form_with url: admin_products_path, model: Product.new do |form| %>
    <div class="form-group mb-4">
      <%= form.label '商品名', class: "h6 mb-2" %>
      <%= form.text_field :name, class: "form-control", id: "product_name" %>
    </div>
    <div class="form-group mb-4">
      <%= form.label '画像', class: "h6 mb-2" %>
      <%= form.file_field :image, class: "form-control", id: "product_image" %>
    </div>
    <div class="form-group mb-4">
      <%= form.label '値段', class: "h6 mb-2" %>
      <%= form.text_field :price, class: "form-control", id: "product_price" %>
    </div>
    <div class="form-group mb-4">
      <%= form.label '商品説明', class: "h6 mb-2" %>
      <%= form.text_area :description, class: "form-control", id: "product_description", size: "40 x 7" %>
    </div>
    <%= form.submit "更新", class: "btn btn-primary mb-3" %>
  <% end %>
</div>